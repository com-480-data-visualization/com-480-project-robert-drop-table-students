root = true

[*]
end_of_line = lf
charset = utf-8
max_line_length = 80
indent_size = 2


[*.py]
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100
indent_size = 4

[*.js]
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80
indent_size = 2
